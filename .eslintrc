{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "react-app",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "switch-colon-spacing": ["error", {"after": true, "before": false}],
        "no-undef": "off",
        "no-console": "off",
        "no-unused-vars": "off"
    }
}